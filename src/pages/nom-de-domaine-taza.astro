    <ServiceProximite 
        page="nom-de-domaine" 
        title="Nom de domaine à Taza et partout au Maroc" 
        map={true} 
        titleMap="Taza"
        src="https://www.google.com/maps/embed/v1/place?q=Taza&amp;zoom=14&amp;maptype=roadmap&amp;key=AIzaSyCNTEOso0tZG6YMSJFoaJEY5Th1stEWrJI"
      />
