const {
  className,
  title,
  heroHeading,
  plans = hostingPlans,
  namePlaneBold,
} = Astro.props;

const getWidthClass = (totalPlans: number) => {
  if (totalPlans === 2) {
    return "w-full md:w-[100%] lg:mx-[0] md:mx-[150px] lg:mb-[35px] md:mb-[50px] mb-[35px] lg:w-[38%]";
  }
  return "w-full md:w-[100%] lg:mx-[0] md:mx-[150px] lg:mb-[35px] md:mb-[50px] mb-[35px] lg:w-[32%]";
};
---

<section
  id="plans"
  class={`${className || ''} overflow-hidden plans-section relative`}
>
  <div class="container">
    {!heroHeading && title && (
      <div class="text-center">
        <h2 class="title-section text-title">{title}</h2>
      </div>
    )}

    <div
      class={`${
        hostingPlans.length > 2
          ? "lg:gap-x-[1.33%] gap-y-[1.33%] lg:justify-self-start justify-center"
          : "gap-x-[5%] justify-center"
      } flex flex-wrap py-[30px] w-full`}
    >
      {plans.map((plan: Plan) => (
        <div
          key={plan.id}
          class={`${
            plan.most_popular.is_most_popular && "border-3 border-primary"
          } bg-white relative lg:text-left text-center rounded-[10px] 
          ${getWidthClass(plans.length)}
          md:pt-[55px] md:px-[50px] md:pb-[50px] lg:pt-[50px] lg:pb-[40px] lg:px-[40px] pt-[45px] px-[25px] pb-[35px] shadow_main h-full`}
        >
          {plan.most_popular.is_most_popular && (
            <div class="absolute py-[8px] bg-primary px-[20px] text-[16px] sm:left-1/3 left-1/2 top-0 -translate-x-1/2 -translate-y-1/2 text-white text-center font-[500] inline-block">
              <AnimatedButton
                text={plan.most_popular.text.toUpperCase()}
                hoverText={plan.most_popular.text.toUpperCase()}
                bgColor="bg-primary"
                textColor="text-white"
              />
            </div>
          )}

          {namePlaneBold ? (
            <h3
              class="lg:text-[34px] md:text-left text-center md:text-[31px] text-[28px] text-title font-[600] md:leading-[33px] leading-[1.3em] mb-4"
              set:html={plan.name}
            ></h3>
          ) : (
            <h3
              class="lg:text-[26px] md:text-left text-center md:text-[30px] text-[28px] text-title font-[600] md:leading-[33px] leading-[1.3em] mb-4"
              set:html={plan.name}
            ></h3>
          )}

          {plan.subtext && (
            <p class="text-[#022545BD] md:text-left text-center text-[14px] font-normal leading-[21px] tracking-[0.3px]">
              {plan.subtext}
            </p>
          )}

          <div class="border-t  border-gray-200 sm:my-[40px] my-[30px]"></div>

          <div class="mb-6">
            <div class="h-[40px]">
              {plan.price_original && (
                <div class="flex items-center lg:justify-start justify-center gap-2 mb-2">
                  <span class="text-primary font-medium line-through text-lg">
                    {plan.price_original}
                  </span>
                  <span class="bg-primary py-[8px] text-white text-[15px] font-[600] px-[10px] rounded-[8px]">
                    Economisez {plan.save}
                  </span>
                </div>
              )}
            </div>
            <p class="text-base text-title font-[600] mb-1">À seulement</p>
            <p class="text-[45px] font-[600] leading-[54px] text-title">
              {plan.price_discounted}
            </p>
          </div>

          <a
            href={plan.order.href}
            class={`w-full ${
              plan.most_popular.is_most_popular
                ? "bg-primary"
                : "bg-title hover:bg-primary transition"
            } text-white flex items-center mt-[18px] gap-3 justify-center font-[600] py-[16px] rounded-[10px] text-center mb-4 transition`}
            target="_blank"
            rel="noopener noreferrer"
          >
            {plan.order.text}
            <svg
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="4"
              stroke="currentColor"
              class="size-3 font-[600]"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"
              />
            </svg>
          </a>

          <p class="text-sm text-title " set:html={plan.price_ttc}></p>

          <div class="border-t border-gray-200 sm:my-[40px] my-[30px]"></div>

          <div class="flex items-center lg:justify-start justify-center gap-2 mb-6">
            <span class="text-sm font-[600] text-gray-700 mr-2">Performances</span>
            <div class="flex">
              {[...Array(5)].map((_, i) => (
                <svg
                  key={i}
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill={i < plan.performance_stars ? "#FFA500" : "none"}
                  stroke="#FFA500"
                  stroke-width="2"
                  class="mr-1"
                >
                  <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.857 1.524 8.276L12 18.897l-7.46 4.542 1.524-8.276L.001 9.306l8.331-1.151z" />
                </svg>
              ))}
            </div>
          </div>

          <ul class="text-title text-sm space-y-2 flex-grow">
            <li class="flex items-center lg:justify-start justify-center">
              {plan.features.seo_optimized ? (
                <>
                  <img
                    src="/images/google-svg.svg"
                    alt="SEO Optimized"
                    width={16}
                    height={16}
                    class="mr-1"
                  />
                  <span class="text-title">
                    Optimisé <b>SEO</b>
                  </span>
                </>
              ) : (
                <>
                  <img
                    src="/images/google-svg-dark.svg"
                    alt="SEO Optimized"
                    width={16}
                    height={16}
                    class="mr-1"
                  />
                  <span class="text-shadow-gray-200 opacity-20">
                    Optimisé SEO
                  </span>
                </>
              )}
            </li>
            <li>
              {plan.features.free_domain ? (
                <p>
                  Nom de domaine <b>gratuit</b>
                </p>
              ) : (
                <p class="text-shadow-gray-200 opacity-20">
                  Nom de domaine gratuit
                </p>
              )}
            </li>
            <li>
              {plan.features.wordpress_preinstalled ? (
                <div class="flex items-center gap-1 lg:justify-start justify-center gap-2">
                  <img
                    src="/images/wp.svg"
                    alt="WordPress préinstallé"
                    width={16}
                    height={16}
                    class="mr-1"
                  />
                  <p>
                    WordPress <b>préinstallé</b>
                  </p>
                </div>
              ) : (
                <p class="text-shadow-gray-200 opacity-20">
                  WordPress préinstallé
                </p>
              )}
            </li>
            <li>
              Panneau de contrôle
              <b>
                <i>{plan.features.control_panel}</i>
              </b>
            </li>
            <li>
              SSL : <b>{plan.features.ssl}</b>
            </li>
            <li>
              Espace disque : <b>{plan.features.disk_space}</b>
            </li>
            <li>
              Bande passante : <b>{plan.features.bandwidth}</b>
            </li>
            <li>
              Bases de données : <b>{plan.features.databases}</b>
            </li>
            <li>
              Comptes email : <b>{plan.features.email_accounts}</b>
            </li>
            <li>
              Sous-domaines : <b>{plan.features.subdomains}</b>
            </li>
            <li>
              Sauvegardes : <b>{plan.features.backups}</b>
            </li>
          </ul>

          {typeof plan.more_performance === "object" &&
            plan.more_performance &&
            plan.more_performance.href && (
              <div class="mt-6">
                <a
                  href={plan.more_performance.href}
                  class="text-title text-base font-[600] underline inline-flex items-center"
                >
                  {plan.more_performance.text}
                </a>
              </div>
            )}
        </div>
      ))}
    </div>

   
  </div>
</section>

