---
interface Props {
  src: string;
  width?: string;
  height?: string;
  title?: string;
  className?: string;
}

const { 
  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3441728.5579234385!2d-9.998168768750002!3d31.791702!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd0b265f3c7b1ab5%3A0x99f83ab3e9b22e25!2sMorocco!5e0!3m2!1sen!2sma!4v1234567890123!5m2!1sen!2sma",
  width = "100%", 
  height = "530", 
  title = "Map",
  className = "w-full"
} = Astro.props;
---

<div class="rounded-lg overflow-hidden">
  <iframe
    src={src}
    width={width}
    height={height}
    style="border: 0"
    allowfullscreen
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    class="w-full"
    title={title}
    class={className}
  ></iframe>
</div>