---
// src/components/sections/HeroSection.astro

// Import the image (recommended for local images in Astro)
import ConsultButton from '../ui/ConsultButton.astro';

---

<section class="bg-gray-200">
  <div class="container grid-cols-1 md:py-[150px] py-[80px] px-5 mx-auto max-w-screen-xl md:grid-cols-2 gap-x-8 grid items-center">
    <!-- Text Content -->
    <div class="col-span-1 flex flex-col custom-row-gap mb-10 md:mb-0 md:pr-10 text-center md:text-left">
      <h1 class="md:text-[19px] text-[18px] font-[600] tracking-[-0.5px] text-title">
        Hébergement web Maroc
      </h1>
      <h1 class="big-title title font-semibold text-title">
        Hébergement web depuis le Maroc
      </h1>

     
       <ConsultButton href="#plans" />
      
      <div class="flex flex-col md:items-start items-center">
        <p class="text-title text-[13px] font-[500] py-[5px] mb-[10px] tracking-[1.2px]">
          CONSULTATION PAR EMAIL ?
        </p>
        <p class="border-bottom text-[31px] font-[600] text-title">
          info@hostino.com
        </p>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="col-span-1 flex z-10 justify-center">
      <div class="relative w-full">
        <img
          src="/images/01/hebergement-web-maroc.webp"
          alt="Web Hosting in Morocco"
          fetchpriority="high"
          loading="lazy"
          class="w-full h-full md:p-[20px] p-[25px] md:scale-100 lg:scale-100 rounded-lg"
        />
      </div>
    </div>
  </div>
</section>