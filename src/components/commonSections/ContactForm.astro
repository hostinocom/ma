---
interface Props {
  title: string;
}

const { title , classNameTitle = ""} = Astro.props;
---

<div class="py-[80px] flex items-center justify-center bg-title p-4">
  <div class="container text-center">
   <div class={classNameTitle}>
       <h1
      class="text-white lg:text-[40px] md:text-[40px] font-semibold text-[36px] mb-6 pb-2 leading-relaxed"
      set:html={title}
    />
   </div>

    <form id="contact-form" class="mt-10 lg:w-[80%] sm:w-[95%] w-[100%] mx-auto">
      <div class="flex flex-col md:flex-row justify-center gap-4">
        <input
          type="text"
          name="fullName"
          placeholder="Nom complet"
          class="bg-transparent rounded-[26px] text-white placeholder-gray-400 border border-primary focus:border-gray-500 focus:ring-gray-500 py-3 px-4 w-full md:w-1/3 transition duration-300 ease-in-out focus:outline-none"
          aria-label="Nom complet"
          required
        />

        <input
          type="tel"
          name="phone"
          placeholder="Numéro de téléphone"
          class="bg-transparent rounded-[26px] text-white placeholder-gray-400 border border-primary focus:border-gray-500 focus:ring-gray-500 py-3 px-4 w-full md:w-1/3 transition duration-300 ease-in-out focus:outline-none"
          aria-label="Numéro de téléphone"
          required
        />

        <input
          type="email"
          name="email"
          placeholder="Adresse email"
          class="bg-transparent rounded-[26px] text-white placeholder-gray-400 border border-primary focus:border-gray-500 focus:ring-gray-500 py-3 px-4 w-full md:w-1/3 transition duration-300 ease-in-out focus:outline-none"
          aria-label="Adresse email"
          required
        />
      </div>

      <button
        type="submit"
        class="bg-primary hover:bg-primary/90 text-white rounded-[26px] sm:px-[150px] mt-12 sm:w-auto w-full font-semibold py-3 text-center disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-300"
      >
        Envoyer
      </button>

      <div id="form-message" class="mt-4 text-sm hidden"></div>
    </form>

    <p class="text-gray-400 text-sm mt-8">
      En cliquant sur "Envoyer", vous acceptez notre 
      <a
        href="/politique-de-confidentialite/"
        class="underline hover:text-green-500 transition duration-300"
      >
        politique de confidentialité.
      </a>
    </p>
  </div>
</div>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
const messageDiv = document.getElementById('form-message') as HTMLDivElement;

form?.addEventListener('submit', async (e) => {
  e.preventDefault();

  submitButton.disabled = true;
  submitButton.textContent = 'Envoi en cours...';
  messageDiv.classList.add('hidden');

  const formData = new FormData(form);
  const data = {
    fullName: formData.get('fullName') as string,
    phone: formData.get('phone') as string,
    email: formData.get('email') as string,
    page: window.location.href
  };

  try {
    const response = await fetch('/send-email', {
      method: 'POST',
      headers: { 
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data),
    });

    const result = await response.json();

    if (result.success) {
      messageDiv.textContent = '✅ Message envoyé avec succès!';
      messageDiv.className = 'mt-4 text-sm text-green-400 font-semibold';
      form.reset(); // Clear the form
    } else {
      messageDiv.textContent = `❌ ${result.message}`;
      messageDiv.className = 'mt-4 text-sm text-red-400 font-semibold';
    }
    messageDiv.classList.remove('hidden');
    
  } catch (error) {
    console.error('Erreur réseau:', error);
    messageDiv.textContent = '❌ Erreur de connexion. Veuillez réessayer.';
    messageDiv.className = 'mt-4 text-sm text-red-400 font-semibold';
    messageDiv.classList.remove('hidden');
  } finally {
    submitButton.disabled = false;
    submitButton.textContent = 'Envoyer';
  }
});
</script>

<style>
  /* Animation pour les messages */
  #form-message {
    animation: slideIn 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>