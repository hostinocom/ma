---
import AnimatedButton from "../ui/AnimatedButton.astro";

interface Plan {
  id: number;
  name: string;
  subtext?: string;
  price_original: string;
  price_discounted: string;
  save: string;
  price_ttc: string;
  performance_stars: number;
  more_performance?: {
    text: string;
    href: string;
    exists: boolean;
  };
  order: {
    text: string;
    href: string;
  };
  features: {
    seo_optimized: boolean;
    free_domain: boolean;
    wordpress_preinstalled: boolean;
    control_panel: string;
    ssl: string;
    disk_space: string;
    bandwidth: string;
    databases: string | number;
    email_accounts: string | number;
    subdomains: string | number;
    backups: string;
  };
  most_popular: {
    text: string;
    is_most_popular: boolean;
  };
}

interface Props {
  plans: Plan[];
  title?: string;
  smallTitle?: string;
  className?: string;
  heroHeading?: boolean;
  namePlaneBold?: boolean;
}

const { plans, title, smallTitle, className, heroHeading, namePlaneBold } = Astro.props;

const getWidthClass = (length: number) => {
  if (length === 2) return "lg:w-[47.5%] w-full";
  if (length === 3) return "lg:w-[32%] md:w-[49%] w-full";
  return "lg:w-[24%] md:w-[49%] w-full";
};
---

<section
  id="plans"
  class={`${className || ''} overflow-hidden plans-section relative`}
>
  <div class="container">
    {!heroHeading && title && (
      <div class="text-center">
        <h2 class="title-section text-title">{title}</h2>
        {smallTitle && (
          <p class="paragraph text-title mt-2">{smallTitle}</p>
        )}
      </div>
    )}

    <div
      class={`${
        plans.length > 2
          ? "lg:gap-x-[1.33%] gap-y-[1.33%] lg:justify-self-start justify-center"
          : "gap-x-[5%] justify-center"
      } flex flex-wrap py-[30px] w-full`}
    >
      {plans.map((plan: Plan) => (
        <div
          key={plan.id}
          class={`${
            plan.most_popular.is_most_popular && "border-3 border-primary"
          } bg-white relative lg:text-left text-center rounded-[10px] 
          ${getWidthClass(plans.length)}
          md:pt-[55px] md:px-[50px] md:pb-[50px] lg:pt-[50px] lg:pb-[40px] lg:px-[40px] pt-[45px] px-[25px] pb-[35px] shadow_main h-full`}
        >
          {plan.most_popular.is_most_popular && (
            <div class="absolute py-[8px] bg-primary px-[20px] text-[16px] sm:left-1/3 left-1/2 top-0 -translate-x-1/2 -translate-y-1/2 text-white text-center poppins-regular inline-block">
              <AnimatedButton
                text={plan.most_popular.text.toUpperCase()}
                hoverText={plan.most_popular.text.toUpperCase()}
                bgColor="bg-primary"
                textColor="text-white"
              />
            </div>
          )}
        <div class="flex flex-col">
        <div>
          {namePlaneBold ? (
            <h3
              class="lg:text-[34px] md:text-left text-center md:text-[31px] text-[28px] text-title poppins-semibold  md:leading-[33px] leading-[1.3em] mb-4"
              set:html={plan.name}
            ></h3>
          ) : (
            <h3
              class="lg:text-[26px] md:text-left text-center md:text-[30px] text-[28px] text-title poppins-semibold  md:leading-[33px] leading-[1.3em] mb-4"
              set:html={plan.name}
            ></h3>
          )}
          {plan.subtext && (
            <p class="text-[#022545BD] md:text-left text-center text-[14px] poppins-regular leading-[21px] tracking-[0.3px]">
              {plan.subtext}
            </p>
          )}
          <div class="border-t  border-gray-200 sm:my-[40px] my-[30px]"></div>
        </div>


        <div>
          <div class="mb-6">
            <div class="h-[40px]">
              {plan.price_original && (
                <div class="flex items-center lg:justify-start justify-center gap-2 mb-2">
                  <span class="text-primary numbers font-medium line-through text-lg">
                    {plan.price_original}
                  </span>
                  <span class="bg-primary numbers py-[8px] text-white text-[15px] poppins-semibold  px-[10px] rounded-[8px]">
                    Save {plan.save}
                  </span>
                </div>
              )}
            </div>
            <p class="text-[16px] text-title poppins-semibold  mb-1">For only</p>
            <p class="text-[45px] numbers poppins-semibold  leading-[54px] text-title">
              {plan.price_discounted}
            </p>
          </div>

          <a
            href={plan.order.href}
            class={`w-full ${
              plan.most_popular.is_most_popular
                ? "bg-primary"
                : "bg-title hover:bg-primary transition"
            } text-white flex items-center mt-[18px] gap-3 justify-center poppins-semibold  py-[16px] rounded-[10px] text-center mb-4 transition`}
            target="_blank"
            rel="noopener noreferrer"
          >
            {plan.order.text}
            <svg
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="4"
              stroke="currentColor"
              class="size-3 poppins-semibold "
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"
              />
            </svg>
          </a>

          <p class="text-sm text-title " set:html={plan.price_ttc}></p>

          <div class="border-t border-gray-200 sm:my-[40px] my-[30px]"></div>

          

          <ul class="text-title text-sm space-y-2 flex-grow">
            <li class="flex items-center lg:justify-start justify-center">
              {plan.features.seo_optimized ? (
                <>
                  <img
                    src="/images/google-svg.svg"
                    alt="SEO Optimized"
                    width={16}
                    height={16}
                    class="mr-1"
                  />
                  <span class="text-title">
                    <b>SEO</b> Optimized
                  </span>
                </>
              ) : (
                <>
                  <img
                    src="/images/google-svg-dark.svg"
                    alt="SEO Optimized"
                    width={16}
                    height={16}
                    class="mr-1"
                  />
                  <span class="text-shadow-gray-200 opacity-20">
                    SEO Optimized
                  </span>
                </>
              )}
            </li>
            <li>
              {plan.features.free_domain ? (
                <p>
                  Free <b>domain name</b>
                </p>
              ) : (
                <p class="text-shadow-gray-200 opacity-20">
                  Free domain name
                </p>
              )}
            </li>
            <li>
              {plan.features.wordpress_preinstalled ? (
                <div class="flex items-center gap-1 lg:justify-start justify-center gap-2">
                  <img
                    src="/images/wp.svg"
                    alt="Pre-installed WordPress"
                    width={16}
                    height={16}
                    class="mr-1"
                  />
                  <p>
                    <b>Pre-installed</b> WordPress
                  </p>
                </div>
              ) : (
                <p class="text-shadow-gray-200 opacity-20">
                  Pre-installed WordPress
                </p>
              )}
            </li>
            <li>
              Control Panel
              <b>
                <i>{plan.features.control_panel}</i>
              </b>
            </li>
            <li>
              SSL: <b>{plan.features.ssl}</b>
            </li>
            <li>
              Disk Space: <b>{plan.features.disk_space}</b>
            </li>
            <li>
              Bandwidth: <b>{plan.features.bandwidth}</b>
            </li>
            <li>
              Databases: <b>{plan.features.databases}</b>
            </li>
            <li>
              Email Accounts: <b>{plan.features.email_accounts}</b>
            </li>
            <li>
              Subdomains: <b>{plan.features.subdomains}</b>
            </li>
            <li>
              Backups: <b>{plan.features.backups}</b>
            </li>
          </ul>

          {typeof plan.more_performance === "object" &&
            plan.more_performance &&
            plan.more_performance.href && (
              <div class="mt-6">
                <a
                  href={plan.more_performance.href}
                  class="text-title text-base poppins-semibold  underline inline-flex items-center"
                >
                  {plan.more_performance.text}
                </a>
              </div>
            )}
        </div>
       </div>
       </div>
      ))}
    </div>

   
  </div>
</section>