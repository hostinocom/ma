---
interface Props {
  src: string;
  width?: string;
  height?: string;
  title?: string;
  className?: string;
}

const { 
  src, 
  width = "100%", 
  height = "530", 
  title = "Map",
  className = "w-full"
} = Astro.props;
---

<div class="rounded-lg overflow-hidden">
  <iframe
    src={src}
    width={width}
    height={height}
    style="border: 0"
    allowfullscreen
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    class="w-full"
    title={title}
    class={className}
  ></iframe>
</div>